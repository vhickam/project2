<body class="profile-body">
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">
    <img src="/images/icon-color.png" width="30" height="30" class="d-inline-block align-top" alt="">
    FitPal
  </a>
   <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
   <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/home">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/profile">Profile</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/logout">Logout</a>
      </li>
    </ul>
  </div>
</nav>




{{#if user}}
  <div class="container">
    <div class="row justify-content-center">
      <img src="/images/profile.png" height='100' width='100'>
    </div>
    <div class="row justify-content-center profile-name">
      <h1>{{user.name}}</h1>
    </div>
    <div class='row justify-content-around'>
      <div class='col-md-5 created-activities'>
         <div class='row justify-content-center'><h4 class="table-title">Created Activites:</h4></div>
        <table class="table profile-table">
            {{#each activities}}
          <tr class='content'>
            <td><img class='act-img' src="/images/{{category}}.png" width="20" height="20"></td>
            <td><h4>{{this.title}}</h4></td>
            <td class="datetime">{{moment this.date 'll'}}</td>
            <td class="datetime rowtime">{{moment this.date 'LT'}}</td>
            <td><a href="/profile/{{this._id}}"><img src="/images/rightarrow.svg" width="15" height="15"></a></td>
          </tr>
      {{/each}}
        </table>  
        <div class='row justify-content-center'>
          <a href="new-activity"><img src="/images/add.png" width='30' height='30'></a>
        </div> 
      </div>

      <div class='col-md-5 joined-activities'>
        <div class='row justify-content-center'><h4 class="table-title">Joined Activites:</h4></div>
        <table class="table profile-table">
            {{#each activities}}
          <tr class='content'>
            <td><img class='act-img' src="/images/{{category}}.png" width="20" height="20"></td>
            <td><h4>{{this.title}}</h4></td>
            <td class="datetime">{{moment this.date 'll'}}</td>
            <td class="datetime rowtime">{{moment this.date 'LT'}}</td>
            <td><a href="/profile/{{this._id}}"><img src="/images/rightarrow.svg" width="15" height="15"></a></td>
          </tr>
      {{/each}}
        </table>   
      </div>
    </div>
      
    <br>
    
  </div>
{{/if}}

</body>